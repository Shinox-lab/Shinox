{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Log Volume by Service",
      "type": "barchart",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "stacking": { "mode": "normal" }
          }
        },
        "overrides": []
      },
      "options": {
        "showValue": "never",
        "barWidth": 0.8,
        "stacking": "normal",
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "sum by (service) (count_over_time({compose_project=~\".+\"} [1m]))",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Error Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "loki", "uid": "" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "drawStyle": "line",
            "pointSize": 5,
            "showPoints": "auto"
          },
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "ERROR" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "WARNING" },
            "properties": [
              { "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }
            ]
          }
        ]
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "targets": [
        {
          "expr": "sum by (level) (count_over_time({compose_project=~\".+\"} | json | level=~\"ERROR|error\" [1m]))",
          "legendFormat": "ERROR",
          "refId": "A"
        },
        {
          "expr": "sum by (level) (count_over_time({compose_project=~\".+\"} | json | level=~\"WARNING|warning|WARN|warn\" [1m]))",
          "legendFormat": "WARNING",
          "refId": "B"
        }
      ]
    },
    {
      "title": "Service Log Stream",
      "type": "logs",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 8 },
      "datasource": { "type": "loki", "uid": "" },
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      },
      "targets": [
        {
          "expr": "{compose_project=~\".+\", service=~\"$service\"} | json",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Agent Activity",
      "type": "logs",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 20 },
      "datasource": { "type": "loki", "uid": "" },
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      },
      "targets": [
        {
          "expr": "{compose_project=~\".+\", agent_id=~\".+\"} | json",
          "legendFormat": "",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Kafka Message Flow (Governance)",
      "type": "logs",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 20 },
      "datasource": { "type": "loki", "uid": "" },
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      },
      "targets": [
        {
          "expr": "{service=\"governance\"} | json | message=~\".*(Routed|Processing|Archived|Blocked).*\"",
          "legendFormat": "",
          "refId": "A"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["shinox", "mesh", "overview"],
  "templating": {
    "list": [
      {
        "current": { "selected": true, "text": "All", "value": "$__all" },
        "datasource": { "type": "loki", "uid": "" },
        "definition": "label_values(service)",
        "includeAll": true,
        "multi": true,
        "name": "service",
        "query": "label_values(service)",
        "refresh": 2,
        "type": "query"
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "Shinox Mesh Overview",
  "uid": "shinox-mesh-overview",
  "version": 1
}
