FROM python:3.12-slim-bookworm

# 1. Install uv, Node.js (for MCP server), and curl (for healthcheck)
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/
RUN apt-get update && \
    apt-get install -y curl gnupg make g++ && \
    curl -fsSL https://deb.nodesource.com/setup_22.x | bash - && \
    apt-get install -y nodejs && \
    rm -rf /var/lib/apt/lists/*

# 2. Set working directory
WORKDIR /app

# 3. Build the MCP server (Node.js)
# Copy dependency manifest first (for layer caching)
COPY Shinox/agents/todo_list/mcp_tool/server/package.json Shinox/agents/todo_list/mcp_tool/server/yarn.lock* ./mcp_server/
WORKDIR /app/mcp_server
RUN npm install

# Copy only source files â€” NOT node_modules (local ones are built for macOS, not Linux)
COPY Shinox/agents/todo_list/mcp_tool/server/src/ ./src/
COPY Shinox/agents/todo_list/mcp_tool/server/tsconfig.json ./
RUN npm run build

# 4. Install Python agent dependencies
WORKDIR /app
COPY Shinox/agents/todo_list/pyproject.toml Shinox/agents/todo_list/uv.lock ./
RUN uv sync --no-dev --no-install-project

# 5. Copy all agent application code (excluding mcp_tool/server/node_modules via .dockerignore or selective copy)
COPY Shinox/agents/todo_list/*.py Shinox/agents/todo_list/start.sh* ./
COPY Shinox/agents/todo_list/mcp_tool/client/ ./mcp_tool/client/
COPY Shinox/agents/todo_list/pyproject.toml Shinox/agents/todo_list/uv.lock ./

# 6. Install the project itself
RUN uv sync --no-dev

# Use the virtual environment automatically
ENV PATH="/app/.venv/bin:$PATH"
ENV MCP_SERVER_PATH="/app/mcp_server/dist/index.js"

# Create a startup script that runs both the agent and the dashboard
RUN printf '#!/bin/sh\nnode /app/mcp_server/dist/dashboard.js &\nexec faststream run main:app\n' > /app/start.sh && \
    chmod +x /app/start.sh

EXPOSE 3456

CMD ["/app/start.sh"]
