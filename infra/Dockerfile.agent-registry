FROM python:3.12-slim-bookworm


# 1. Install uv (Copy binary from official image - safest & fastest method)
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# 2. Set working directory
WORKDIR /app

# Install curl for healthcheck
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# 3. Copy dependency files
COPY Shinox/agent_registry/pyproject.toml Shinox/agent_registry/uv.lock ./

# 4. Install dependencies
# Remove --frozen so it picks up the new jinja2 dependency from pyproject.toml
RUN uv sync --no-dev

# Copy application code and templates
COPY Shinox/agent_registry/*.py ./
COPY Shinox/agent_registry/templates ./templates

EXPOSE 9000

# Run the A2A agent server
CMD ["uv", "run", "main.py"]
